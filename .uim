
(require "japanese.scm")
(define ja-rk-rule-basic (append '(
;; フォーマットは以下のとおり。
;;(((<キー>+) . ()) (<ひらがな> <カタカナ> <半角カタカナ>))
;;または(((<キー>+) . ()) ((<ひらがな> <カタカナ> <半角カタカナ>)+))

;; 「、」を「，」、「。」を「．」とする
;    (((",") . ()) ("，" "，" ","))
;    (((".") . ()) ("．" "．" "."))
;; 「z SPC」で全角スペースを入力(uim-skkのみ有効)
    ((("z" " ") . ()) ("　" "　" " "))
;; 「z -」で波ダッシュ(windowsで変になる)ではなく全角チルダを入力(uim-skkのみ有効)
;;  チルダで波ダッシュは入力できる
;;  U+301C WAVE DASH 〜
;;  U+FF5E FULLWIDTH TILDE ~
    ;;((("z" "-") . ()) ("~" "~" "~"))
;; dvorak向け
    ((("c" "a") . ()) ("か" "カ" "ｶ"))
    ((("c" "i") . ()) ("き" "キ" "ｷ"))
    ((("c" "u") . ()) ("く" "ク" "ｸ"))
    ((("c" "e") . ()) ("け" "ケ" "ｹ"))
    ((("c" "o") . ()) ("こ" "コ" "ｺ"))
    ((("c" "g" "a") . ()) (("き" "キ" "ｷ") ("ゃ" "ャ" "ｬ")))
    ((("c" "g" "i") . ()) (("き" "キ" "ｷ") ("ぃ" "ィ" "ｨ")))
    ((("c" "g" "u") . ()) (("き" "キ" "ｷ") ("ゅ" "ュ" "ｭ")))
    ((("c" "g" "e") . ()) (("き" "キ" "ｷ") ("ぇ" "ェ" "ｪ")))
    ((("c" "g" "o") . ()) (("き" "キ" "ｷ") ("ょ" "ョ" "ｮ")))
    ) ja-rk-rule-basic))

